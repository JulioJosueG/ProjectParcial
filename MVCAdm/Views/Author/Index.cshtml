@model IEnumerable<DataAccess.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Creacion y Modificacion - Autores</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                Country
            </th>
            <th>
                State
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCountryNavigation.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdStateNavigation.StateName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAuthor">Edit</a> 
            </td>
        </tr>
}
    </tbody>
</table>
